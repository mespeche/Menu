<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin.menu.create" path="/admin/module/Menu/create">
        <default key="_controller">Menu\Controller\Admin\MenuController::createAction</default>
    </route>

    <route id="admin.menu.update" path="/admin/module/Menu/update">
        <default key="_controller">Menu\Controller\Admin\MenuController::updateAction</default>
    </route>

    <route id="admin.menu.save" path="/admin/module/Menu/save">
        <default key="_controller">Menu\Controller\Admin\MenuController::processUpdateAction</default>
    </route>

    <route id="admin.menu.view" path="/admin/module/Menu/view">
        <default key="_controller">Menu\Controller\Admin\MenuController::viewAction</default>
    </route>

    <route id="admin.menu.delete" path="/admin/module/Menu/delete">
        <default key="_controller">Menu\Controller\Admin\MenuController::deleteAction</default>
    </route>

    <route id="admin.menu.toggle-online" path="/admin/module/Menu/toggle-online">
        <default key="_controller">Menu\Controller\Admin\MenuController::setToggleVisibilityAction</default>
    </route>
    
    <route id="admin.menu.update-position" path="/admin/module/Menu/update-position">
        <default key="_controller">Menu\Controller\Admin\MenuController::updatePositionAction</default>
    </route>

</routes>
